@page "/"

<PageTitle>Home</PageTitle>

<RadzenText TextStyle="TextStyle.H2">Welcome to LoraMint</RadzenText>
<RadzenText TextStyle="TextStyle.Subtitle1" Style="margin-top: 0.5rem;">AI-Powered Image Generation with Custom LoRA Training</RadzenText>

<RadzenRow Gap="1.5rem" Style="margin-top: 2rem;">
    <RadzenColumn Size="12" SizeMD="6">
        <RadzenCard Style="height: 100%;">
            <RadzenText TextStyle="TextStyle.H5" Style="margin-bottom: 0.5rem;">Generate Images</RadzenText>
            <RadzenText Style="margin-bottom: 1rem;">Create stunning images from text prompts using Stable Diffusion with optional LoRA models.</RadzenText>
            <RadzenButton Text="Start Generating" ButtonStyle="ButtonStyle.Primary" Click="@(() => NavigationManager.NavigateTo("/generate"))" />
        </RadzenCard>
    </RadzenColumn>
    <RadzenColumn Size="12" SizeMD="6">
        <RadzenCard Style="height: 100%;">
            <RadzenText TextStyle="TextStyle.H5" Style="margin-bottom: 0.5rem;">Train Custom LoRAs</RadzenText>
            <RadzenText Style="margin-bottom: 1rem;">Upload your reference images to train personalized LoRA adapters for unique styles.</RadzenText>
            <RadzenButton Text="Train LoRA" ButtonStyle="ButtonStyle.Success" Click="@(() => NavigationManager.NavigateTo("/train-lora"))" />
        </RadzenCard>
    </RadzenColumn>
</RadzenRow>

<RadzenRow Gap="1.5rem" Style="margin-top: 1.5rem;">
    <RadzenColumn Size="12" SizeMD="6">
        <RadzenCard Style="height: 100%;">
            <RadzenText TextStyle="TextStyle.H5" Style="margin-bottom: 0.5rem;">My Images</RadzenText>
            <RadzenText Style="margin-bottom: 1rem;">Browse and manage your generated images.</RadzenText>
            <RadzenButton Text="View Gallery" ButtonStyle="ButtonStyle.Info" Click="@(() => NavigationManager.NavigateTo("/my-images"))" />
        </RadzenCard>
    </RadzenColumn>
    <RadzenColumn Size="12" SizeMD="6">
        <RadzenCard Style="height: 100%;">
            <RadzenText TextStyle="TextStyle.H5" Style="margin-bottom: 0.5rem;">My LoRAs</RadzenText>
            <RadzenText Style="margin-bottom: 1rem;">View and manage your trained LoRA models.</RadzenText>
            <RadzenButton Text="View LoRAs" ButtonStyle="ButtonStyle.Warning" Click="@(() => NavigationManager.NavigateTo("/my-loras"))" />
        </RadzenCard>
    </RadzenColumn>
</RadzenRow>

@code {
    [Inject] NavigationManager NavigationManager { get; set; } = default!;
}
